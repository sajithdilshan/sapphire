- flash.each do |name, msg|
  - if msg.is_a?(String)
    %div{:class => "alert alert-dismissable alert-#{name == :notice ? "success" : "danger"}"}
      %button.close{"type" => "button", "data-dismiss" => "alert", "aria-hidden" => "true"} &times;
      = content_tag :div, msg, :id => "flash_#{name}"